{
    "name": "@devbits/backend",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "db:migrate": "dotenv -e ../../.env -- prisma migrate dev",
        "db:generate": "dotenv -e ../../.env -- prisma generate",
        "db:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
        "db:studio": "dotenv -e ../../.env -- prisma studio",
        "db:reset": "dotenv -e ../../.env -- prisma migrate reset",
        "db:seed": "dotenv -e ../../.env -- tsx ./prisma/seed/seed.ts",
        "dev": "dotenv -e ../../.env -- tsx --watch src/index.ts",
        "test:unit": "vitest --config ./vitest.unit.config.mts --reporter verbose",
        "test:unit:coverage": "vitest run --config ./vitest.unit.config.mts --coverage",
        "test:integration": "./src/tests/integration/run-integration-tests.sh",
        "test:integration:ci": "vitest run --config ./vitest.integration.config.mts --reporter verbose"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@devbits/shared": "workspace:*",
        "@fastify/cookie": "^11.0.2",
        "@fastify/jwt": "^9.1.0",
        "@fastify/oauth2": "^8.1.2",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.2",
        "@prisma/client": "6.7.0",
        "dotenv": "^16.5.0",
        "fastify": "^5.3.2",
        "fastify-type-provider-zod": "^4.0.2",
        "google-auth-library": "^9.15.1",
        "http-status-codes": "^2.3.0",
        "inversify": "7.0.0-alpha.5",
        "jsonwebtoken": "^9.0.2",
        "pino": "^9.7.0",
        "prisma": "^6.7.0",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.9",
        "@vitest/coverage-v8": "^3.2.3",
        "pino-pretty": "^13.0.0",
        "tsx": "^4.19.4",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.3",
        "vitest-mock-extended": "^3.1.0"
    }
}
